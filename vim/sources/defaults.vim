" Defaults
set laststatus=3
set history=700
set cul
set autoread
set number
set cmdheight=2
set encoding=utf8
set ffs=unix,dos,mac
set backspace=indent,eol,start

" Search settings
set ignorecase
set smartcase
set hlsearch
set incsearch

" Linebreak on 500 characters
set lbr
set tw=500

set ai "Auto indent
set si "Smart indent
set wrap "Wrap lines

" Proper spaces-for-tabs behavior
set tabstop=4 softtabstop=4 shiftwidth=4 expandtab

" Enable folding
set foldmethod=indent
set foldlevel=99

